{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["authToken"],
    "description": "An outgoing client websocket message sent when a client performs an action in a room",
    "properties": {
        "authToken": {
            "type": "string",
            "description": "JWT for the room obtained from the server"
        },
        "sessionCookie": {
            "type": "string",
            "description": "Session cookie value, which allows the socket connection to use user authentication. If supplied, it MUST match the session with which authToken was created."
        }
    },
    "anyOf": [
        {"$ref": "#/$defs/JoinAction"},
        {"$ref": "#/$defs/LeaveAction"},
        {"$ref": "#/$defs/ChatAction"},
        {"$ref": "#/$defs/MarkAction"},
        {"$ref": "#/$defs/UnmarkAction"},
        {"$ref": "#/$defs/ChangeColorAction"},
        {"$ref": "#/$defs/NewCardAction"}
    ],
    "$defs": {
        "JoinAction": {
            "required": ["action"],
            "additionalProperties": false,
            "properties": {
                "action": "join",
                "payload": {
                    "required": ["nickname"],
                    "additionalProperties": false,
                    "properties": {
                        "nickname": {"type": "string"}
                    }
                }
            }
        },
        "LeaveAction": {
            "required": ["action"],
            "additionalProperties": false,
            "properties": {
                "action": "leave"
            }
        },
        "ChatAction": {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "chat",
                "payload": {
                    "required": ["message"],
                    "additionalProperties": false,
                    "properties": {
                        "message": {"type": "string"}
                    }
                }
            }
        },
        "MarkAction": {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "mark",
                "payload": {
                    "required": ["row", "col"],
                    "additionalProperties": false,
                    "properties": {
                        "row": {"type": "number"},
                        "col": {"type": "number"}
                    }
                }
            }
        },
        "UnmarkAction": {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "unmark",
                "payload": {
                    "required": ["row", "col"],
                    "additionalProperties": false,
                    "properties": {
                        "row": {"type": "number"},
                        "col": {"type": "number"}
                    }
                }
            }
        },
        "ChangeColorAction": {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "changeColor",
                "payload": {
                    "required": ["color"],
                    "additionalProperties": false,
                    "properties": {
                        "color": {"type": "string"}
                    }
                }
            }
        },
        "NewCardAction": {
            "required": ["action"],
            "additionalProperties": false,
            "properties": {
                "action": "newCard",
                "seed": {"type": "number"},
                "generationMode": {"type": "string"}
            }
        }
    }
}